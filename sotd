#!/usr/bin/env ruby

require 'colorize'
require 'pry'

class Sherevo
  CURRENT_DIRECTORy=`pwd`
  puts "#{CURRENT_DIRECTORy}"
  SHEREVO_FILE = 'sotd.txt'
  ABSOLUTE_PATH = ENV['SHEREVO_PROJECT'] +  '/' + SHEREVO_FILE

  COLORS = [:red, :blue, :light_blue, :green, ]

  def initialize
    puts "abs: #{ABSOLUTE_PATH}"
    sherevo
  end 

  private 

  def content
    @content ||= File.readlines(ABSOLUTE_PATH).shuffle
  end

  def sherevo_of_the_day
    "\n#{content.sample}"
  end

  def random_color
    String.colors.sample
  end

  def sherevo
    puts sherevo_of_the_day.colorize(color: random_color, mode: :bold)
  end
end 

Sherevo.new 


