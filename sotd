#!/usr/bin/env ruby

require 'colorize'

class Sherevo
  SHEREVO_FILE = 'sotd.txt'

  def initialize
    sherevo_of_the_day
  end 

  private 

  def content
    @content ||= File.readlines(SHEREVO_FILE).shuffle
  end

  def sherevo_of_the_day
    content.sample
  end

  def sherevo
    puts sherevo_of_the_day.colorize(color: :green, mode: :bold)
  end
end 

10.times { Sherevo.new }

