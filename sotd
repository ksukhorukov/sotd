#!/usr/bin/env ruby

require 'colorize'
require 'pry'

SHEREVO_FILE = 'sotd.txt'

class Sherevo
  def initialize
    puts "abs: #{ABSOLUTE_PATH}"
    sherevo
  end 

  private 

  def content
    @content ||= File.readlines(ABSOLUTE_PATH).shuffle
  end

  def sherevo_of_the_day
    "\n#{content.sample}"
  end

  def random_color
    String.colors.sample
  end

  def sherevo
    puts sherevo_of_the_day.colorize(color: random_color, mode: :bold)
  end
end 

Sherevo.new 


